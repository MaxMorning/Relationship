<Grid x:Class="Relationship.Widget.FriendRecordGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Relationship.Widget"
             mc:Ignorable="d" 
             Height="40"
             Background="#EEEEEE">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="100"/>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="75"/>
        <ColumnDefinition Width="75"/>
    </Grid.ColumnDefinitions>
    <Label
        Name="lbFriendRecordID"
        Grid.Column="0"
        HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center"
        FontSize="18"
        FontFamily="微软雅黑"
        FontWeight="Normal"
        Foreground="#555555"
        Margin="0 0"
        Content="12139">

    </Label>

    <Label
        Name="lbFriendRecordName"
        Grid.Column="1"
        HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center"
        FontSize="18"
        FontFamily="微软雅黑"
        FontWeight="Normal"
        Foreground="#555555"
        Margin="0 0"
        Content="张大伟">

    </Label>

    <Label
        Name="lbFriendRecordGender"
        Grid.Column="2"
        HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center"
        FontSize="18"
        FontFamily="微软雅黑"
        FontWeight="Normal"
        Foreground="#555555"
        Margin="0 0"
        Content="女">

    </Label>

    <Label
        Name="lbFriendRecordAge"
        Grid.Column="3"
        HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center"
        FontSize="18"
        FontFamily="微软雅黑"
        FontWeight="Normal"
        Foreground="#555555"
        Margin="0 0"
        Content="20">

    </Label>

    <Grid.ContextMenu>
        <ContextMenu
            Name="contextmenuFriendRecord">
            <Button
                Name="btFriendRecordGetInfo"
                Style="{StaticResource LightButton}"
                Content="查看"
                FontSize="24"
                Height="30"
                MinWidth="1"
                Click="btFriendRecordGetInfo_Click">

            </Button>
            
            <Button
                Name="btFriendRecordDelete"
                Style="{StaticResource LightButton}"
                Content="移除"
                FontSize="24"
                Height="30"
                MinWidth="1"
                Click="btFriendRecordDelete_Click">

            </Button>

            <Button
                Name="btFriendRecordAddFriend"
                Style="{StaticResource LightButton}"
                Content="添加好友"
                FontSize="24"
                Height="30"
                MinWidth="1"
                Click="btFriendRecordAddFriend_Click">

            </Button>
        </ContextMenu>
    </Grid.ContextMenu>
</Grid>
