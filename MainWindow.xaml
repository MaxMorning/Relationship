                HorizontalAlignment="Right"
                VerticalAlignment="Top">
                <Rectangle
                    Name="TopBar"
                    Width="800"
                    Height="40"
                    Fill="Transparent"
                    MouseLeftButtonDown="TopBar_MouseLeftButtonDown">

                </Rectangle>

                <Button
                    Name="MinButton"
                    Width="30"
                    Height="30"
                    Margin="0 15 15 0"
                    BorderThickness="0"
                    Style="{StaticResource MinButton}"
                    Click="MinButton_Click">
                </Button>

                <Button
                    Name="CloseButton"
                    Width="30"
                    Height="30"
                    Margin="0 15 15 0"
                    BorderThickness="0"
                    Style="{StaticResource CloseButton}"
                    Click="CloseButton_Click">
                </Button>

            </StackPanel>
        </DockPanel>

    </Grid>
</Window>
